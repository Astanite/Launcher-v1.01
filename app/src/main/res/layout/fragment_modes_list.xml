<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".ui.settings.ModesListFragment">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_settings_black"
        android:drawablePadding="10dp"
        android:text="@string/settings"
        android:textSize="30sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/settings"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/app_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_app_selection"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_app_selection"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_app_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_app_selection"
            android:text="@string/apps_selection"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_selection"
            android:layout_toRightOf="@id/iv_app_selection"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Focus, Leisure, Sleep"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/distractive_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_selection"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_distractive_apps"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_distractive_apps"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_distractive_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_distractive_apps"
            android:text="Distractive Apps"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_distractive_apps"
            android:layout_toEndOf="@id/iv_distractive_apps"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Whtsapp, Instagram, Facebook, Messanger"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distractive_apps"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_feedback"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_feedback"
            android:text="@string/feedback"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_feedback"
            android:layout_toRightOf="@id/iv_feedback"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Tell your experience, Suggestion, Share"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_contact_us"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_contact_us"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_contact_us"
            android:text="Constact us"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_us"
            android:layout_toRightOf="@id/iv_contact_us"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Help, Solution, Troubleshoot"
            />

    </RelativeLayout>

</RelativeLayout>